@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4 mt-5">List Of All Employee</h1>

    @if (Model.Count<Employee>() >  0)
    {
        <table class="table table-responsive table-striped">
            <tr>
                <th>S/N</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Department</th>
                <th>Action</th>
            </tr>
            @foreach (Employee employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Department</td>
                    @*<td><a href="/home/employee?@employee.Id">View</a></td>*@ @*// === using Path Variable*@
                    <td><a asp-controller="home" asp-action="employee" asp-route-Id="@employee.Id">View</a></td>
                </tr>
            }


        </table>                
    }else{
       <p>No Data to display</p>
    }
</div>
